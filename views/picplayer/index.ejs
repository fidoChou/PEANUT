<script type="text/javascript">
	window.onload = function(){
		function $(id){
			return document.getElementById(id);
		}
		var container = $("container")
		var left = $("left")
		var right = $("right");
		var lists = document.querySelector(".lists")
		var cntlist = document.querySelector(".cnt-list");
		var picPlayer ={
			step :0,
			left:lists.style.left,
			newLEFT:0,
			offset:-390,
			picNum:15
		}
		picPlayer.animate=function(){
			var me= this;
			me.step = 0 ;
			var oldLEFT = Number(lists.style.left.split("px")[0]);	
			function change(){
				if(Math.abs(me.step)<Math.abs(me.offset)){
					me.step += (me.offset/50);
					var newLEFT = oldLEFT+me.step;
					lists.style.left =newLEFT + "px"
					if(newLEFT<=(me.picNum-1)*me.offset){
						lists.style.left = 0+"px"
					}else if(newLEFT>0) {
						lists.style.left = -(me.picNum-1)*me.offset+"px";
					}
					setTimeout(change,5);
				}
			}
			change();
		}
		setInterval(function(){
			right.onclick();
		},3000)
		right.onclick = function(){
			picPlayer.animate();
		}
	}
	</script>
